	@Override
	public Divisa getDivisaById(String divisaTipo) {
		divisaTipo.toUpperCase();
		Optional<Divisa> divisa = repository.findById(divisaTipo);
		if(!divisa.isEmpty()) return divisa.get();
		else return null;
	}

